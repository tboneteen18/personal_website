<div class="container">
  <div class="row">
    <h1 class="page-header text-center">Run Round Simulation</h1>
      <%= form_for(@round, url: tournament_round_path) do |round| %>
        <div class="form-group">
          <p>Round Number: <%= round.text_field :number, class: 'form-control', required: true %></p>
        </div>
        <div>
          <p><%= submit_tag('Run Simulation', class: 'btn btn-default')%></p>
        </div>
      <% end %>
  </div>
</div>

<div class="text-center">
  <h3>you cant add rounds that are already created</h3>
</div>

<%= link_to tournament_round_index_path do%>
<i class="fa fa-times-circle fa-3x"></i>
<% end %>
